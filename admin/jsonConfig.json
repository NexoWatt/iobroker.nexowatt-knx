{
  "i18n": true,
  "type": "tabs",
  "items": {
    "connection": {
      "type": "panel",
      "label": "TAB_CONNECTION",
      "items": {
        "gatewayIp": {
          "type": "text",
          "label": "GATEWAY_IP",
          "placeholder": "192.168.1.2"
        },
        "gatewayPort": {
          "type": "number",
          "label": "GATEWAY_PORT",
          "min": 1,
          "max": 65535,
          "default": 3671
        },
        "localInterface": {
          "type": "text",
          "label": "LOCAL_INTERFACE",
          "placeholder": "z.B. 192.168.1.10"
        },
        "physAddr": {
          "type": "text",
          "label": "PHYS_ADDR",
          "placeholder": "1.1.250"
        },
        "loglevel": {
          "type": "select",
          "label": "LOGLEVEL",
          "options": [
            {
              "label": "error",
              "value": "error"
            },
            {
              "label": "warn",
              "value": "warn"
            },
            {
              "label": "info",
              "value": "info"
            },
            {
              "label": "debug",
              "value": "debug"
            },
            {
              "label": "trace",
              "value": "trace"
            }
          ]
        }
      }
    },
    "import": {
      "type": "panel",
      "label": "TAB_IMPORT",
      "items": {
        "_importInfo": {
          "type": "staticText",
          "text": "ETS_IMPORT_INFO",
          "sm": 12
        },
        "etsProjectFile": {
          "type": "fileSelector",
          "label": "ETS_PROJECT_FILE",
          "pattern": "**/*.knxproj",
          "objectID": "nexowatt-knx.%INSTANCE%.files",
          "upload": "ets",
          "refresh": true,
          "delete": true,
          "maxSize": "30MB",
          "withFolder": true
        },
        "importOnStart": {
          "type": "checkbox",
          "label": "IMPORT_ON_START"
        },
        "gaStyleOverride": {
          "type": "select",
          "label": "GA_STYLE_OVERRIDE",
          "options": [
            {
              "label": "Auto",
              "value": "auto"
            },
            {
              "label": "Drei-Level (x/y/z)",
              "value": "ThreeLevel"
            },
            {
              "label": "Zwei-Level (x/y)",
              "value": "TwoLevel"
            }
          ]
        },
        "readOnStart": {
          "type": "checkbox",
          "label": "READ_ON_START"
        },
        "importNow": {
          "type": "sendTo",
          "label": "IMPORT_NOW",
          "command": "importEts",
          "showProcess": true,
          "timeout": 120000,
          "newLine": true
        }
      }
    },
    "manual": {
      "type": "panel",
      "label": "TAB_MANUAL",
      "items": {
        "manualDatapoints": {
          "type": "table",
          "label": "MANUAL_DATAPOINTS",
          "items": [
            {
              "type": "text",
              "attr": "name",
              "title": "DP_NAME",
              "width": "20%"
            },
            {
              "type": "text",
              "attr": "ga",
              "title": "DP_GA",
              "width": "20%"
            },
            {
              "type": "text",
              "attr": "dpt",
              "title": "DP_DPT",
              "width": "15%"
            },
            {
              "type": "checkbox",
              "attr": "readFlag",
              "title": "DP_READ",
              "width": "10%"
            },
            {
              "type": "checkbox",
              "attr": "writeFlag",
              "title": "DP_WRITE",
              "width": "10%"
            },
            {
              "type": "checkbox",
              "attr": "transmitFlag",
              "title": "DP_TRANSMIT",
              "width": "10%"
            }
          ]
        }
      }
    },
    "advanced": {
      "type": "panel",
      "label": "TAB_ADVANCED",
      "items": {
        "forceTunneling": {
          "type": "checkbox",
          "label": "FORCE_TUNNELING"
        },
        "localEcho": {
          "type": "checkbox",
          "label": "LOCAL_ECHO"
        },
        "minimumDelayMs": {
          "type": "number",
          "label": "MIN_DELAY_MS",
          "min": 0,
          "max": 1000
        },
        "ackOnWrite": {
          "type": "checkbox",
          "label": "ACK_ON_WRITE"
        }
      }
    }
  }
}
