{
  "type": "tabs",
  "items": {
    "connection": {
      "type": "panel",
      "label": "tab_connection",
      "items": {
        "gatewayIp": {
          "type": "text",
          "label": "gatewayIp",
          "placeholder": "192.168.1.2"
        },
        "gatewayPort": {
          "type": "number",
          "label": "gatewayPort",
          "min": 1,
          "max": 65535,
          "default": 3671
        },
        "localInterface": {
          "type": "text",
          "label": "localInterface",
          "placeholder": "e.g. 192.168.1.10"
        },
        "physAddr": {
          "type": "text",
          "label": "physAddr",
          "placeholder": "1.1.250"
        },
        "loglevel": {
          "type": "select",
          "label": "loglevel",
          "options": [
            { "label": "error", "value": "error" },
            { "label": "warn", "value": "warn" },
            { "label": "info", "value": "info" },
            { "label": "debug", "value": "debug" },
            { "label": "trace", "value": "trace" }
          ]
        }
      }
    },
    "import": {
      "type": "panel",
      "label": "tab_import",
      "items": {
        "etsProjectFile": {
          "type": "text",
          "label": "etsProjectFile",
          "placeholder": "project.knxproj (upload via Files -> nexowatt-knx)"
        },
        "importOnStart": {
          "type": "checkbox",
          "label": "importOnStart"
        },
        "gaStyleOverride": {
          "type": "select",
          "label": "gaStyleOverride",
          "options": [
            { "label": "auto", "value": "auto" },
            { "label": "ThreeLevel (x/y/z)", "value": "ThreeLevel" },
            { "label": "TwoLevel (x/y)", "value": "TwoLevel" }
          ]
        },
        "readOnStart": {
          "type": "checkbox",
          "label": "readOnStart"
        }
      }
    },
    "manual": {
      "type": "panel",
      "label": "tab_manual",
      "items": {
        "manualDatapoints": {
          "type": "table",
          "label": "manualDatapoints",
          "items": [
            {
              "type": "text",
              "attr": "name",
              "title": "dp_name",
              "width": "25%"
            },
            {
              "type": "text",
              "attr": "ga",
              "title": "dp_ga",
              "width": "20%",
              "placeholder": "1/2/3"
            },
            {
              "type": "text",
              "attr": "dpt",
              "title": "dp_dpt",
              "width": "15%",
              "placeholder": "1.001"
            },
            {
              "type": "checkbox",
              "attr": "readFlag",
              "title": "dp_read",
              "width": "10%"
            },
            {
              "type": "checkbox",
              "attr": "writeFlag",
              "title": "dp_write",
              "width": "10%"
            },
            {
              "type": "checkbox",
              "attr": "transmitFlag",
              "title": "dp_transmit",
              "width": "10%"
            }
          ]
        }
      }
    },
    "advanced": {
      "type": "panel",
      "label": "tab_advanced",
      "items": {
        "forceTunneling": {
          "type": "checkbox",
          "label": "forceTunneling"
        },
        "localEcho": {
          "type": "checkbox",
          "label": "localEcho"
        },
        "minimumDelayMs": {
          "type": "number",
          "label": "minimumDelayMs",
          "min": 0,
          "max": 1000
        },
        "ackOnWrite": {
          "type": "checkbox",
          "label": "ackOnWrite"
        }
      }
    }
  }
}
